########################################################################################################################
#!!
#! @description: Generated operation description.
#!
{{{documentation}}}
#!!#
########################################################################################################################

namespace: {{namespace}}

operation: {{#with operation}}
  name: {{name}}
  {{#if hasInputs}}
  inputs: {{#each inputs}}
    - {{name}}{{#if hasAny}}:{{/if}} {{#if hasDefault}}
        default: {{{default}}} {{/if}} {{#unless isRequired}}
        required: {{isRequired}}{{/unless}} {{#if isPrivate}}
        private: {{isPrivate}}{{/if}} {{#if isSensitive}}
        sensitive: {{isSensitive}}{{/if}}{{/each}}
    {{/if}}
  java_action: {{#with javaAction}}
    gav: '{{gav}}'
    class_name: '{{class_name}}'
    method_name: '{{method_name}}'{{/with}}
  {{#if hasOutputs}}
  outputs: {{#each outputs}}
    - {{name}}{{#if hasValue}}: {{value}} {{/if}}{{/each}}{{/if}}
  {{#if hasResults}}
  results: {{#each results}}
    - {{name}}{{#if hasValue}}: {{value}} {{/if}}{{/each}}{{/if}}
{{/with}}